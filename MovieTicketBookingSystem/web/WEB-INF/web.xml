<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <display-name>MovieTicketBookingSystem</display-name>
    <!-- Welcome file -->
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <!-- Servlet mappings -->
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller.HomePageController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <!-- Admin Room Management -->
    <servlet>
        <servlet-name>AdminRoomServlet</servlet-name>
        <servlet-class>controller.AdminRoomServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRoomServlet</servlet-name>
        <url-pattern>/admin-rooms</url-pattern>
    </servlet-mapping>
    <!-- Admin Cinema Management -->
    <servlet>
        <servlet-name>AdminCinemaServlet</servlet-name>
        <servlet-class>controller.AdminCinemaServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCinemaServlet</servlet-name>
        <url-pattern>/admin-cinema</url-pattern>
    </servlet-mapping>
    <!-- Admin Customer Management -->
    <servlet>
        <servlet-name>AdminCustomerServlet</servlet-name>
        <servlet-class>controller.AdminCustomerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCustomerServlet</servlet-name>
        <url-pattern>/admin-customers</url-pattern>
    </servlet-mapping>
    <!-- Admin Staff Management -->
    <servlet>
        <servlet-name>AdminStaffServlet</servlet-name>
        <servlet-class>controller.AdminStaffServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminStaffServlet</servlet-name>
        <url-pattern>/admin-staff</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OTPVerifyServlet</servlet-name>
        <servlet-class>controller.OTPVerifyServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>OTPVerifyServlet</servlet-name>
        <url-pattern>/otpverify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.ForgotPasswordServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>controller.ResetPasswordServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controller.ProfileServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>controller.ChangePasswordServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowtimeSelectionServlet</servlet-name>
        <servlet-class>controller.ShowtimeSelectionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowtimeSelectionServlet</servlet-name>
        <url-pattern>/showtime-selection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SeatSelectionServlet</servlet-name>
        <servlet-class>controller.SeatSelectionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeatSelectionServlet</servlet-name>
        <url-pattern>/seat-selection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductSelectionServlet</servlet-name>
        <servlet-class>controller.ProductSelectionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductSelectionServlet</servlet-name>
        <url-pattern>/product-selection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookingConfirmServlet</servlet-name>
        <servlet-class>controller.BookingConfirmServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingConfirmServlet</servlet-name>
        <url-pattern>/booking-confirm</url-pattern>
    </servlet-mapping>
    <!-- Admin Product Management -->
    <servlet>
        <servlet-name>AdminProductServlet</servlet-name>
        <servlet-class>controller.AdminProductServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductServlet</servlet-name>
        <url-pattern>/admin-products</url-pattern>
    </servlet-mapping>
    <!-- Admin Ticket Management -->
    <servlet>
        <servlet-name>AdminTicketServlet</servlet-name>
        <servlet-class>controller.AdminTicketServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminTicketServlet</servlet-name>
        <url-pattern>/admin-tickets</url-pattern>
    </servlet-mapping>
    <!-- Admin Movie Management -->
    <servlet>
        <servlet-name>AdminMovieServlet</servlet-name>
        <servlet-class>controller.AdminMovieServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin-dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.AdminDashboardServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminMovieServlet</servlet-name>
        <url-pattern>/admin-movies</url-pattern>
    </servlet-mapping>
    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <!-- Character encoding filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>force</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Admin Showtime Management -->
    <servlet>
        <servlet-name>AdminShowtimeServlet</servlet-name>
        <servlet-class>controller.AdminShowtimeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminShowtimeServlet</servlet-name>
        <url-pattern>/admin-showtimes</url-pattern>
    </servlet-mapping>
    <!-- Movie Controller -->
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>controller.MovieController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movie</url-pattern>
    </servlet-mapping>
    <!-- Booking Controller -->
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>controller.BookingController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
</web-app>
